{
    "productName": "TauriLeptosTemplate",
    "identifier": "net.curiana",
    "version": "0.0.0",
    "build": {
        "beforeBuildCommand": "trunk build",
        "beforeDevCommand": "trunk serve",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "plugins": {
	    "shell": {
		    "open": true
	    },
	    "updater": {
		    "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDREREQ5NjdGNzI4RDlBMEQKUldRTm1vMXlmNWJkVFNuenBSYUpEZkh3cnQvTFhsekNvRnBPWTRoZFFML0YzT3dPcVNMNEN0RWMK",
